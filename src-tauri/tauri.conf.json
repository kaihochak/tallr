{
  "package": {
    "productName": "Tally",
    "version": "0.1.0"
  },
  "tauri": {
    "bundle": {
      "identifier": "dev.tally.app",
      "icon": ["icons/icon.png"],
      "macOS": {
        "entitlements": null,
        "exceptionDomain": ""
      }
    },
    "allowlist": { 
      "all": true,
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "sidecar": false,
        "scope": [
          { "name": "cursor", "cmd": "cursor", "args": ["--reuse-window", { "validator": ".*" }] },
          { "name": "code", "cmd": "code", "args": ["--reuse-window", { "validator": ".*" }] },
          { "name": "open", "cmd": "open", "args": ["-a", "Visual Studio Code", { "validator": ".*" }] },
          { "name": "osascript", "cmd": "osascript", "args": ["-e", { "validator": ".*" }] }
        ]
      }
    },
    "windows": [
      { "title": "Tally", "width": 460, "height": 640, "resizable": true, "visible": true }
    ],
    "systemTray": { "iconPath": "icons/icon.png", "iconAsTemplate": true }
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "./dist"
  }
}
