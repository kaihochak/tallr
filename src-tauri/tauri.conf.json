{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tallr",
  "version": "1.0.0",
  "identifier": "dev.tallr.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tallr",
        "width": 360,
        "height": 600,
        "minWidth": 120,
        "minHeight": 60,
        "resizable": true,
        "visible": true,
        "alwaysOnTop": true,
        "visibleOnAllWorkspaces": true,
        "titleBarStyle": "Overlay",
        "decorations": true,
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 19,
          "y": 18
        }
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost http://127.0.0.1:4317; script-src 'self'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../tools"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
