{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tally",
  "version": "0.1.0",
  "identifier": "dev.tally.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tally",
        "width": 480,
        "height": 640,
        "minWidth": 400,
        "minHeight": 500,
        "resizable": true,
        "visible": true,
        "alwaysOnTop": true,
        "visibleOnAllWorkspaces": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost http://127.0.0.1:4317"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../tools/tally"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
