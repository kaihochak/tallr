{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-set-always-on-top",
    "core:window:allow-is-always-on-top",
    "core:window:allow-set-visible-on-all-workspaces",
    "core:window:allow-set-size",
    "core:window:allow-inner-size",
    "opener:default",
    "shell:allow-execute",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "cursor",
          "cmd": "cursor",
          "args": [{"validator": ".*"}]
        },
        {
          "name": "code",
          "cmd": "code",
          "args": [{"validator": ".*"}]
        },
        {
          "name": "zed",
          "cmd": "zed",
          "args": [{"validator": ".*"}]
        },
        {
          "name": "webstorm",
          "cmd": "webstorm",
          "args": [{"validator": ".*"}]
        },
        {
          "name": "idea",
          "cmd": "idea",
          "args": [{"validator": ".*"}]
        },
        {
          "name": "pycharm",
          "cmd": "pycharm",
          "args": [{"validator": ".*"}]
        },
        {
          "name": "phpstorm",
          "cmd": "phpstorm",
          "args": [{"validator": ".*"}]
        },
        {
          "name": "rubymine",
          "cmd": "rubymine",
          "args": [{"validator": ".*"}]
        },
        {
          "name": "clion",
          "cmd": "clion",
          "args": [{"validator": ".*"}]
        },
        {
          "name": "goland",
          "cmd": "goland",
          "args": [{"validator": ".*"}]
        },
        {
          "name": "rider",
          "cmd": "rider",
          "args": [{"validator": ".*"}]
        },
        {
          "name": "windsurf",
          "cmd": "windsurf",
          "args": [{"validator": ".*"}]
        },
        {
          "name": "open",
          "cmd": "open",
          "args": [{"validator": ".*"}]
        },
        {
          "name": "osascript",
          "cmd": "osascript",
          "args": ["-e", {"validator": "^tell application \"Terminal\" to do script \"cd [a-zA-Z0-9/_. -]+\"$"}]
        }
      ]
    },
    "notification:default"
  ]
}
